#myCarousel.carousel.slide[data-bs-ride="carousel"]
  ol.carousel-indicators
    li[data-bs-target="#myCarousel" data-bs-slide-to="0"]
    li.active[data-bs-target="#myCarousel" data-bs-slide-to="1"]
    li[data-bs-target="#myCarousel" data-bs-slide-to="2"]
  .carousel-inner

    .carousel-item
      = image_tag '1.jpg', class: 'carousel-image'
        rect[width="100%" height="100%" fill="#777"]
      .container
        .carousel-caption.text-start style='top: 60%; background-color: #22242A; border-radius: 10px; padding: 5%'
          p The list of institutions in ukraine is very large, you can also choose an institution from this list.
          a.btn.btn-lg.btn-primary[href="https://en.wikipedia.org/wiki/List_of_universities_in_Ukraine" role="button"] All list

    .carousel-item.active
      = image_tag '2.jpg', class: 'carousel-image'
        rect[width="100%" height="100%" fill="#777"]
      .container
        .carousel-caption style='top: 75%; background-color: #22242A; border-radius: 10px'
          h1 Register to take part!
          = link_to 'Sing up', new_user_registration_path, class: 'btn btn-primary'

    .carousel-item
      = image_tag '3.jpg', class: 'carousel-image'
        rect[width="100%" height="100%" fill="#777"]
      .container
        .carousel-caption.text-end style='top: 60%; background-color: #22242A; border-radius: 10px; padding: 5%'
          h1 More information about Ukraine can be found on the official website of the Ministry of Education
          a.btn.btn-lg.btn-primary.text-center[href="https://studyinukraine.gov.ua/en/why-ukraine/about-ukraine/" role="button"] Official


  a.carousel-control-prev[href="#myCarousel" role="button" data-bs-slide="prev"]
    span.carousel-control-prev-icon[aria-hidden="true"]
    span.visually-hidden Previous

  a.carousel-control-next[href="#myCarousel" role="button" data-bs-slide="next"]
    span.carousel-control-next-icon[aria-hidden="true"]
    span.visually-hidden Next
